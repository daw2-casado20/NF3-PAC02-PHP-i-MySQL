<?php
// Te recomiendo utilizar esta conección, la que utilizas ya no es la recomendada. 
$link = new PDO('mysql:host=localhost;dbname=mimusica', 'root', ''); // el campo vaciío es para la password. 
?>

<table class="table table-striped">
  	
		<thead>
		<tr>
			<th>music_id</th>
			<th>music_nombre</th>
			<th>musica_tipo</th>
			<th>musica_anio</th>
			<th>musica_cantante</th>
			<th>music_productor</th>
		</tr>
		</thead>
<?php foreach ($link->query('SELECT * from music where music_id	= "1"') as $row){  ?> 
<tr>
	<td><?php echo $row['music_id']  ?></td>
    <td><?php echo $row['music_nombre'] ?></td>
    <td><?php echo $row['musica_tipo'] ?></td>
    <td><?php echo $row['musica_anio']  ?></td>
    <td><?php echo $row['musica_cantante'] ?></td>
    <td><?php echo $row['music_productor'] ?></td>
 </tr>
<?php
	}
?>
